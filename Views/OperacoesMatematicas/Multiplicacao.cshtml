@{
    ViewData["Title"] = "Multiplicação";
}

<h1 class="display-4">Operação Matemática Multiplicação</h1>
<p>Utilize o formulário abaixo para multiplicar dois números</p>

<form action="ResultadoMultiplicacao" method="post">
    <p>
        <label for="num1">Número 1</label>
        <input type="text" name="num1" id="num1" >
    </p>
    <p>
        <label for="num2">Número 2</label>
        <input type="text" name="num2" id="num2" >
    </p>
    <p>
        <input type="submit" value="Multiplicar">
    </p>
</form>

